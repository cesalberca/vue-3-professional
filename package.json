    "@vueuse/core": "14.0.0",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "highlight.js": "11.11.1",
    "lucide-vue-next": "0.552.0",
    "pinia": "3.0.3",
    "pinia-plugin-persistedstate": "4.7.1",
    "reka-ui": "2.6.0",
    "tailwind-merge": "3.3.1",
